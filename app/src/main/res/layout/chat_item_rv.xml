<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatCL"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/chat_ripple"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/avatarIW"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameTW"
        style="@style/TextAppearance.TamTam.Content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingHorizontal="12dp"
        android:singleLine="true"
        android:textFontWeight="500"
        app:layout_constraintEnd_toStartOf="@+id/timeLastMessageTW"
        app:layout_constraintStart_toEndOf="@+id/avatarIW"
        app:layout_constraintTop_toTopOf="@+id/avatarIW"
        tools:text="Иван Петров" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarIW"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
        app:layout_constraintStart_toEndOf="@+id/avatarIW">

        <ImageView
            android:id="@+id/avatarLastMessageIW"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:visibility="gone"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/lastMessageTW"
            style="@style/TextAppearance.TamTam.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?attr/colorOnSecondary"
            tools:text="Пришли макеты" />
    </LinearLayout>

    <TextView
        android:id="@+id/timeLastMessageTW"
        style="@style/TextAppearance.TamTam.Helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatarIW"
        tools:text="12:24" />

    <!--    <ImageView-->
    <!--        android:id="@+id/imageView2"-->
    <!--        android:layout_width="12dp"-->
    <!--        android:layout_height="12dp"-->
    <!--        android:layout_marginRight="12dp"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/imageView"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        tools:srcCompat="@drawable/ic_star" />-->

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/avatarIW"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/countBadgeTW"
            style="@style/TextAppearance.TamTam.Helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimary"
            tools:text="2" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>