<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatCL"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/chat_ripple"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/avatarIW"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameTW"
        style="@style/TextAppearance.TamTam.Content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingHorizontal="12dp"
        android:singleLine="true"
        android:textFontWeight="500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatarIW"
        app:layout_constraintTop_toTopOf="@+id/avatarIW"
        tools:text="Иван Петров" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/avatarIW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatarIW">

        <TextView
            style="@style/TextAppearance.TamTam.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="был(а) недавно"
            android:textColor="?attr/colorOnSecondary" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>