<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/start_task1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_task1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_task2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_task1" />

    <Button
        android:id="@+id/start_task3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_task3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_task2" />

    <Button
        android:id="@+id/start_task4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_task4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_task3" />


</androidx.constraintlayout.widget.ConstraintLayout>