<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    android:orientation="horizontal">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

    <LinearLayout
        android:id="@+id/messageLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/my_message_ripple_border_small"
        android:minWidth="200dp"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/messageTW"
            style="@style/TextAppearance.TamTam.Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Привет, Андрей! Пожалуйста, отправь резюме, мы передадим его коллегам "
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/timeLastMessageTW"
            app:layout_constraintStart_toEndOf="@+id/avatarIW"
            app:layout_constraintTop_toTopOf="@+id/avatarIW" />

        <ImageView
            android:id="@+id/imageIW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/messageTimeTW"
            style="@style/TextAppearance.TamTam.Helper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="17:05"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toStartOf="@+id/timeLastMessageTW"
            app:layout_constraintStart_toEndOf="@+id/avatarIW"
            app:layout_constraintTop_toTopOf="@+id/avatarIW" />

    </LinearLayout>


</LinearLayout>