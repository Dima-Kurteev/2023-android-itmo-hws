<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity">

    <Button
        android:id="@+id/task1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Задание 1. Thread и Runnable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/task2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Задание 2. RxJava"
        app:layout_constraintEnd_toEndOf="@+id/task1Btn"
        app:layout_constraintStart_toStartOf="@+id/task1Btn"
        app:layout_constraintTop_toBottomOf="@+id/task1Btn" />
</androidx.constraintlayout.widget.ConstraintLayout>