<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.TamTam" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.TamTam.LogoTitle" parent="TextAppearance.TamTam">
        <item name="font">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TamTam.ScreenTitle" parent="TextAppearance.TamTam">
        <item name="font">@font/roboto_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.TamTam.InputText" parent="TextAppearance.TamTam">
        <item name="font">@font/roboto_regular</item>
        <item name="android:textSize">17sp</item>

        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.TamTam.ButtonText" parent="TextAppearance.TamTam">
        <item name="font">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.TamTam.Description" parent="TextAppearance.TamTam">
        <item name="font">@font/roboto_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TamTam.Content" parent="TextAppearance.TamTam">
        <item name="font">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>